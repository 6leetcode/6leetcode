c:
	@for file in *.c; do \
		$(CC) -Os -g3 -Wall -fsanitize=address -o `echo $$file | cut -d. -f1`.test $$file; \
		./`echo $$file | cut -d. -f1`.test; \
		$(RM) -rf `echo $$file | cut -d. -f1`.test *.dSYM; \
	done

c++:
	@for file in *.cpp; do \
		$(CXX) -Os -g3 -fsanitize=address -o `echo $$file | cut -d. -f1`.test $$file; \
		./`echo $$file | cut -d. -f1`.test; \
		$(RM) -rf `echo $$file | cut -d. -f1`.test *.dSYM; \
	done
